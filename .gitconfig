[user]
	email = albert.gil@happycomputing.cat
	name = Albert Gil
[format]
	pretty = full
[color]
	status = auto
	branch = auto
	diff = auto
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[alias]
	one = log --oneline --decorate --graph
	st = status
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)' --all
[branch]
	autosetuprebase = always
	rebase = true
[rebase]
	stat = true
	abbreviatecommands = true
